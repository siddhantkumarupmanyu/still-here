{
  "name": "with-puppeteer",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "devDependencies": {
    "@types/expect-puppeteer": "^4.4.5",
    "@types/jest": "^26.0.22",
    "@types/jest-environment-puppeteer": "^4.4.1",
    "@types/puppeteer": "^5.4.3",
    "jest": "^26.6.3",
    "jest-puppeteer": "^4.4.0",
    "puppeteer": "^8.0.0"
  },
  "scripts": {
    "clean": "rm -rf build && mkdir -p build/src build/test/unit build/test/end_test",
    "build:src": "tsc --project tsconfig.src.json",
    "build:unit": "tsc --project tsconfig.unit-test.json",
    "build:end-test": "tsc --project tsconfig.end-test.json",
    "test:unit": "yarn clean && yarn build:unit && jest --config=unit-test.jest.config.js",
    "test:end": "yarn clean && yarn build:src && yarn build:end-test && yarn jest --config=end-test.jest.config.js",
    "test": "yarn test:unit",
    "end": "yarn test:end"
  }
}